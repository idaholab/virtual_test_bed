[Tests]
  issues = '#70'
  [generate_mesh]
    type = RunApp
    executable_pattern = 'cardinal*'
    input = 'common_input.i solid.i'
    cli_args = '--mesh-only'
    working_directory = 'meshes'
  []
  [syntax_openmc]
    type = RunApp
    input = 'common_input.i openmc.i'
    check_input = true
    executable_pattern = 'cardinal*'
    prereq = generate_mesh
    max_time = 400
  []
  [syntax_conduction]
    type = RunApp
    input = 'solid.i'
    check_input = true
    executable_pattern = 'cardinal*'
    prereq = generate_mesh
  []
  [syntax_thm]
    type = RunApp
    input = 'thm.i'
    check_input = true
    executable_pattern = 'cardinal*|thermal_hydraulics*'
  []

  [run_multiphysics]
    type = RunApp
    input = 'common_input.i openmc.i'
    cli_args = "Executioner/num_steps=2"
    executable_pattern = 'cardinal*'
    prereq = 'syntax_openmc'
    min_parallel = 16
    max_time = 2000
    mesh_mode = DISTRIBUTED
  []
  [run_conduction]
    type = RunApp
    check_input = True
    input = 'solid.i'
    executable_pattern = 'cardinal*'
    prereq = 'syntax_conduction'
  []
  [run_thm]
    type = RunApp
    input = 'thm.i'
    check_input = true
    executable_pattern = 'cardinal*|thermal_hydraulics*'
    prereq = 'syntax_thm'
  []

  # Check input generation
  [run_python_generation]
    type = RunCommand
    command = 'mkdir test_dir; cp assembly.py test_dir/assembly.py; cp common_input.py test_dir/common_input.py; cp materials.py test_dir/materials.py; cd test_dir; python assembly.py; ls geometry.xml; ls materials.xml'
    required_python_packages = 'matplotlib uncertainties h5py openmc'
    use_shell = true
  []
[]
