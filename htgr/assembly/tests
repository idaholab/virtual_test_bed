[Tests]
  [generate_mesh]
    type = RunApp
    executable_pattern = 'cardinal*'
    input = 'common_input.i solid.i'
    cli_args = '--mesh-only'
    working_directory = 'meshes'
  []
  [syntax_openmc]
    type = RunApp
    input = 'common_input.i openmc.i'
    check_input = true
    executable_pattern = 'cardinal*'
    prereq = generate_mesh
  []
  [syntax_conduction]
    type = RunApp
    input = 'solid.i'
    check_input = true
    executable_pattern = 'cardinal*'
    prereq = generate_mesh
  []
  [syntax_thm]
    type = RunApp
    input = 'thm.i'
    check_input = true
    executable_pattern = 'cardinal*|thermal_hydraulics*'
  []

  [run_openmc]
    type = RunApp
    input = 'common_input.i openmc.i'
    cli_args = "MultiApps/active='' Transfers/active='' Executioner/num_steps=2"
    executable_pattern = 'cardinal*'
    prereq = 'syntax_openmc'
  []
  [run_conduction]
    type = RunApp
    check_input = True
    input = 'solid.i'
    executable_pattern = 'cardinal*'
    prereq = 'syntax_conduction'
  []
  [run_thm]
    type = RunApp
    input = 'thm.i'
    check_input = true
    executable_pattern = 'cardinal*|thermal_hydraulics*'
    prereq = 'syntax_thm'
  []

  # Check input generation
  [run_python_generation]
    type = RunCommand
    command = 'mkdir test_dir; cp assembly.py test_dir/assembly.py; cd test_dir; python assembly.py'
    required_python_packages = 'matplotlib uncertainties h5py'
  []
[]
